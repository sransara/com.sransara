---
import './base.css';
import siteValues from '~/site.values.mjs';

export interface Props {
  title?: string;
}

const { title } = Astro.props;

const siteName = siteValues.name;
const siteTagLine = siteValues.tagLine;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} — ${siteName}` : `${siteName} — ${siteTagLine}`}</title>
    <slot name="head" />
  </head>
  <body class="container mx-auto max-w-2xl p-3 leading-normal">
    <slot name="body" />
  </body>
</html>
