---
import './asciidoc.css';
---

<main class="asciidoc">
  <slot />
</main>

<script>
  // Full screen images on click
  const imageblocks = document.getElementsByClassName('imageblock');
  for (const imageblock of imageblocks) {
    const img = imageblock.getElementsByTagName('img')[0];
    img.addEventListener('click', (event) => {
      if (!imageblock.classList.contains('fullscreen')) {
        event.stopPropagation();
        imageblock.classList.add('fullscreen');
        document.body.classList.add('overflow-hidden');
      }
    });
    imageblock.addEventListener('click', (event) => {
      if (imageblock.classList.contains('fullscreen')) {
        event.stopPropagation();
        imageblock.classList.remove('fullscreen');
        document.body.classList.remove('overflow-hidden');
      }
    });
  }
</script>
